{
    "name": "michaelcozzolino/symfony-validation-enhancements-bundle",
    "description": "A set of symfony validations to enhance the experience with the Symfony validator",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "MichaelCozzolino\\SymfonyValidationEnhancementsBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MichaelCozzolino\\SymfonyValidationEnhancementsBundle\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.1",
        "symfony/validator": "^7.1",
        "symfony/property-access": "^7.1",
        "michaelcozzolino/php-redefinitions": "^0.1.0",
        "doctrine/orm": "^3.3"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^7.1.0",
        "vimeo/psalm": "dev-master",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.5"
    },
    "scripts": {
        "psalm": [
            "vendor/bin/psalm --no-cache"
        ],
        "test": "vendor/bin/pest --colors=auto",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage --min=100 --colors=auto",
        "test-mutate": "XDEBUG_MODE=coverage vendor/bin/pest --mutate"
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true,
            "pestphp/pest-plugin": true
        }
    }
}
